# Environment Configuration Template
# Copy to .env.local and fill in your values

# API Configuration
REACT_APP_API_URL=http://localhost:8000/api

# GHN (Giao Hàng Nhanh) Configuration
# ⚠️ IMPORTANT: This token should be stored in backend, not frontend
# For now, we use it for shipping address lookup
REACT_APP_GHN_TOKEN=a19da9e8-ad5e-11ef-ba4c-42a0500c1482

# Cache Configuration (in milliseconds)
REACT_APP_CACHE_DURATION_LONG=1800000      # 30 minutes for static data (categories, etc.)
REACT_APP_CACHE_DURATION_SHORT=300000       # 5 minutes for dynamic data (products, orders)
REACT_APP_CACHE_DURATION_GHN=3600000        # 1 hour for GHN data

# Request Configuration
REACT_APP_MAX_CONCURRENT_REQUESTS=5         # Max concurrent HTTP requests
REACT_APP_REQUEST_TIMEOUT=10000             # Request timeout in ms
REACT_APP_SEARCH_DEBOUNCE_DELAY=500        # Debounce delay for search in ms

# Feature Flags
REACT_APP_ENABLE_REQUEST_LOGGING=false     # Enable request logging in console
REACT_APP_ENABLE_CACHE_LOGGING=false       # Enable cache hit/miss logging

# Analytics (optional)
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ANALYTICS_ID=

# Environment
REACT_APP_ENVIRONMENT=development          # development, staging, production
